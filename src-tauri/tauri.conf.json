{
    "identifier": "com.remotekeyboard.app",
    "build": {
        "devUrl": "http://localhost:1420",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Remote Keyboard",
                "width": 800,
                "height": 600,
                "minWidth": 500,
                "minHeight": 400
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png",
            "icons/icon.ico"
        ]
    }
}
